<SCRIPT language="VBScript">
    Sub bat
    Const NORMAL_WINDOW=1
    Set objShell = CreateObject("Shell.Application")
    End Sub

    Function getfilepath()
    set ws=CreateObject("WScript.Shell")
    Set getfilepath =  ws.CurrentDirectory
    End Function


</SCRIPT><p>
<SCRIPT language=JavaScript>
    function showDir() {
    var fso, f, fc, s;
    wsh = new ActiveXObject("wscript.shell");
    fso = new ActiveXObject("Scripting.FileSystemObject");

    return(wsh.CurrentDirectory);
    }

    function Run(strPath) {
    exe.value= 'cmd.exe /k ' + showDir() +'\\'+strPath + ' '+ entry.value  + ' '+  key.value + ' ' + f.value + ' pause';
    try {
    var objShell = new ActiveXObject("wscript.shell");
    objShell.Run(exe.value);
    objShell = null;
    }
    catch (e){alert('Can not get the file"'+strPath+'". Please check the path and file name. ')}
    }


</SCRIPT><p>

<select name = 'entry'>
    <option value='e'>加密</option>
    <option value='d'>解密</option>
</select>
<p>秘钥：<input name = key></input></P>
<p>选择文件：<input name=f type=file></P>
<p>GEN_CMD：<textarea style="width: 350px; height: 40px;" name=exe></textarea></P>
<BUTTON  onclick="self.close()">离开</BUTTON>
<BUTTON  onclick="Run('entry.exe')">开始</BUTTON>


